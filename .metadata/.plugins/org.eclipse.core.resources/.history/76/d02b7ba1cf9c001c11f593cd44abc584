	// 11. As Organizaï¿½ï¿½es Tabajara  resolveram dar um aumento de salï¿½rio aos seus colaboradores
	// e lhe contrataram  para desenvolver o programa que calcularï¿½ os reajustes.
	//  Faï¿½a um programa que receba o salï¿½rio de um colaborador e o reajuste segundo o seguinte critï¿½rio , baseado no salï¿½rio atual:
	// - Salï¿½rios atï¿½ R$280,00 (incluindo): aumento de 20%
	// - Salï¿½rios entre R$280,00 e R$700,00: aumento de 15% 
	// - Salï¿½rios entre R$700,00 e R$ 1.500,00: aumento de 10%
	// - Salï¿½rios acima de R$1.500,00 em diante: aumento de 5%.
	// Apï¿½s o aumento ter sido realizado, informe na tela: 
	// - O Salï¿½rio antes do reajuste;
	// - O percentual de aumento  aplicado ;
	// - O valor do aumento;
	// - O novo salï¿½rio apï¿½s o aumento;
		
	Scanner scan = new Scanner(System.in);
	System.out.println("Informe o valor do salï¿½rio ao qual serï¿½ aplicado o aumento:");
	
	
	float salario = scan.nextFloat();
	float vintePercentual = 20 / 100;
	float quinzePercentual = 15 / 100;
	float dezPercentual = 10 / 100;
	float cincoPercentual = 5 / 100;
	float valorAcrescido;
	float valorFinal;
	
	
	if ( salario <= 280.00) {
		valorFinal = salario + (vintePercentual * salario);
		System.out.println("Salï¿½rio antes do reajuste:" + salario);
		System.out.println("Aumento de 20%");
		valorAcrescido = vintePercentual * salario;
		System.out.println("O valor acrescentado ï¿½: " + valorAcrescido);
		System.out.println("O salï¿½rio apï¿½s o ajuste ï¿½:" + valorFinal);	
	} else if (salario > 280.00 || salario < 700.00) {
		valorFinal = salario + (quinzePercentual * salario);
		System.out.println("Salï¿½rio antes do reajuste:" + salario);
		System.out.println("Aumento de 15%");
		valorAcrescido = quinzePercentual * salario;
		System.out.println("O valor acrescentado ï¿½: " + valorAcrescido);
		System.out.println("O salï¿½rio apï¿½s o ajuste ï¿½:" + valorFinal);
	} else if (salario > 700.00 || salario < 1500.00) {
		valorFinal = salario + (dezPercentual * salario);
		System.out.println("Salï¿½rio antes do reajuste:" + salario);
		System.out.println("Aumento de 10%");
		valorAcrescido = dezPercentual * salario;
		System.out.println("O valor acrescentado ï¿½: " + valorAcrescido);
		System.out.println("O salï¿½rio apï¿½s o ajuste ï¿½:" + valorFinal);
	}else {
		valorFinal = salario + (cincoPercentual * salario);
		System.out.println("Salï¿½rio antes do reajuste:" + salario);
		System.out.println("Aumento de 5%");
		valorAcrescido = cincoPercentual * salario;
		System.out.println("O valor acrescentado ï¿½: " + valorAcrescido);
		System.out.println("O salï¿½rio apï¿½s o ajuste ï¿½:" + valorFinal);

	} 
		
	// 12. Faï¿½a um programa para o cï¿½lculo de uma folha de pagamento sabendo que os descontos sï¿½o de Impostos de Renda,
	// que depende do salï¿½rio bruto (conforme tabela abaixo) e 3% para o Sindicato e que o FGTS corresponde a 11% do
	// Salï¿½rio Bruto menos os descontos. O programa deverï¿½ pedir ao usuï¿½rio o valor da sua hora e a quantidade de horas
	// trabalhadas no mï¿½s.
	// - Desconto do IR:
	// - Salario Bruto atï¿½ R$: 900 (inclusive) - isento.
	// - Salario Bruto atï¿½ R$: 1500 (inclusive) - desconto de 5%.
	// - Salario Bruto atï¿½ R$: 2500 (inclusive) - desconto de 10%.
	// - Salario Bruto acima de R$: 2500 - desconto de 20%.
	// - Imprima na tela as informaï¿½ï¿½es, dispostas conforme o exemplo abaixo.
	// No exemplo o valor da hora ï¿½ de R$:5 e as quantidade de horas trabalhadas ï¿½ de 220. 
		
	// |Salï¿½rio Bruto: (5*220)    	= R$: 1.100,00|
	// |(-) IR (5%)                 = R$:    55,00|
	// |(-) INSS (10%)              = R$:   110,00|
	// |FGTS (11%)                  = R$:   121,00|
	// |Total de Descontos          = R$:   165,00|
	// |Salï¿½rio Liquido             = R$:   935,00|
		
		
		Scanner scan = new Scanner(System.in);
		System.out.println("Informe o valor do salï¿½rio por hora seguido pelo nï¿½mero de horas trabalhadas no mï¿½s:");
		
		double salarioHora = scan.nextDouble();
		double horaMes = scan.nextDouble();
		double salarioMes = salarioHora * horaMes;
		double ir5 =  (5 / 100);
		double ir10 =  (10 / 100);
		double ir20 =  (20 / 100);
		double inss =  (10/100);
		double fgts = (11/100);
		
		if(salarioMes <= 900) {
			System.out.println("Salï¿½rio Bruto ------ R$:" + salarioMes);
			System.out.println("IR ----------------- R$:" + "Isento");
			System.out.println("INSS --------------- R$:" + (inss * salarioMes));
			System.out.println("FGTS --------------- R$:" + (fgts * salarioMes));
			System.out.println("Total de Descontos - R$:" + (inss*salarioMes + fgts * salarioMes));
			System.out.println("Salï¿½rio Liquido ---- R$:" + (salarioMes - (inss*salarioMes) - (fgts*salarioMes)));
		}else if(salarioMes > 900 && salarioMes <= 1500 ) {
			System.out.println("Salï¿½rio Bruto ------ R$:" + salarioMes);
			System.out.println("IR ----------------- R$:" + (ir5 *salarioMes));
			System.out.println("INSS --------------- R$:" + (inss * salarioMes));
			System.out.println("FGTS --------------- R$:" + (fgts * salarioMes));
			System.out.println("Total de Descontos - R$:" + (inss*salarioMes + fgts * salarioMes));
			System.out.println("Salï¿½rio Liquido ---- R$:" + (salarioMes - (inss*salarioMes) - (fgts*salarioMes)));
		}else if(salarioMes > 1500 && salarioMes <= 2500) {
			System.out.println("Salï¿½rio Bruto ------ R$:" + salarioMes);
			System.out.println("IR ----------------- R$:" + (ir10*salarioMes));
			System.out.println("INSS --------------- R$:" + (inss * salarioMes));
			System.out.println("FGTS --------------- R$:" + (fgts * salarioMes));
			System.out.println("Total de Descontos - R$:" + (inss*salarioMes + fgts * salarioMes));
			System.out.println("Salï¿½rio Liquido ---- R$:" + (salarioMes - (inss*salarioMes) - (fgts*salarioMes)));
		}else if(salarioMes > 2500) {
			System.out.println("Salï¿½rio Bruto ------ R$:" + salarioMes);
			System.out.println("IR ----------------- R$:" + (ir20*salarioMes));
			System.out.println("INSS --------------- R$:" + (inss * salarioMes));
			System.out.println("FGTS --------------- R$:" + (fgts * salarioMes));
			System.out.println("Total de Descontos - R$:" + (inss*salarioMes + fgts * salarioMes));
			System.out.println("Salï¿½rio Liquido ---- R$:" + (salarioMes - (inss*salarioMes) - (fgts*salarioMes)));
		}else {
			System.out.println("Valores invï¿½lidos");
		} 
		
	// 13. Faï¿½a um programa que leia um nï¿½mero e exiba o dia correspondente da semana. (1-Domingo, 2-Segunda, etc...), 
	// se digitar outro valor, deve aparecer, valor invï¿½lido.
		
		Scanner scan = new Scanner(System.in);
		System.out.println("Digite um nï¿½mero de 1 a 7 correspondente a um dia da semana.");
		
		int dia = scan.nextInt();
		
		switch(dia) {
		case 1: System.out.println("Domingo");
		break;
		case 2: System.out.println("Segunda");
		break;
		case 3: System.out.println("Terï¿½a");
		break;
		case 4: System.out.println("Quarta");
		break;
		case 5: System.out.println("Quinta");
		break;
		case 6: System.out.println("Sexta");
		break;
		case 7: System.out.println("Sï¿½bado");
		break;
